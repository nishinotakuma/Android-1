<?xml version="1.0" encoding="utf-8"?>
<!-- このレイアウトだと、フッターのボタンとリストが重ります -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HobbySelectionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_hobby_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00aaff"
        app:title="趣味"
        app:titleTextColor="#ffffff" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- layout_weightはLinerLayoutにしか指定できません -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/select_hobby_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 色はcolors.xmlに、文字列はstrings.xmlに記述してそこから参照してください -->
            <Button
                android:id="@+id/config_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:alpha="60"
                android:background="#5aaaaaaa"
                android:text="設定"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

</LinearLayout>